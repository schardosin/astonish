          if (storyNext) storyNext.disabled = step === totalSteps;

          // Trigger step 6 demo when navigating to step 6
          if (step === 6) {
            runStep6Demo();
          }
        }

        // Navigation button handlers
        if (storyPrev) {
          storyPrev.addEventListener('click', () => {
            if (currentStep > 1) {
              showSlide(currentStep - 1);
            }
          });
        }

        if (storyNext) {
          storyNext.addEventListener('click', () => {
            if (currentStep < totalSteps) {
              showSlide(currentStep + 1);
            }
          });
        }


        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
          const storySection = document.getElementById('experience');
          if (!storySection) return;
          
          const rect = storySection.getBoundingClientRect();
          // Check if section is somewhat visible in viewport
          const isVisible = rect.top < window.innerHeight && rect.bottom > 0;
          
          if (isVisible) {
            if (e.key === 'ArrowLeft' && currentStep > 1) {
              showSlide(currentStep - 1);
            } else if (e.key === 'ArrowRight' && currentStep < totalSteps) {
              showSlide(currentStep + 1);
            }
          }
        });

        // Scroll wheel lock & slide transition
        const storySection = document.getElementById('experience');
        let isLocked = false;
        let scrollAccumulator = 0;
        const scrollThreshold = 120; // Pixels of accumulated scroll to trigger slide change
        let lastScrollTime = 0;
        const scrollCooldown = 400; // ms between slide changes
        
        if (storySection) {
          // Check if section is in "locked" position (centered in viewport)
          function isSectionLocked() {
            const rect = storySection.getBoundingClientRect();
            // Section is locked if it's close to filling the viewport
            return rect.top <= 10 && rect.bottom >= window.innerHeight - 10;
          }
          
          // Wheel handler for slide transitions
          document.addEventListener('wheel', (e) => {
            const rect = storySection.getBoundingClientRect();
            const now = Date.now();
            
            // Only intercept if section is visible and locked in position
            if (isSectionLocked()) {
              // Scrolling down (positive deltaY)
              if (e.deltaY > 0) {
                if (currentStep < totalSteps) {
                  e.preventDefault();
                  scrollAccumulator += Math.abs(e.deltaY);
                  
                  if (scrollAccumulator >= scrollThreshold && now - lastScrollTime > scrollCooldown) {
                    showSlide(currentStep + 1);
                    scrollAccumulator = 0;
                    lastScrollTime = now;
                  }
                }
                // If at last step, don't prevent default - allow scrolling out
              }
              // Scrolling up (negative deltaY)
              else if (e.deltaY < 0) {
                if (currentStep > 1) {
                  e.preventDefault();
                  scrollAccumulator += Math.abs(e.deltaY);
                  
                  if (scrollAccumulator >= scrollThreshold && now - lastScrollTime > scrollCooldown) {
                    showSlide(currentStep - 1);
                    scrollAccumulator = 0;
                    lastScrollTime = now;
                  }
                }
                // If at first step, don't prevent default - allow scrolling out
              }
            }
          }, { passive: false });
          
          // Reset accumulator when mouse leaves section
          storySection.addEventListener('mouseleave', () => {
            scrollAccumulator = 0;
          });
        }

        // Initialize first slide
        showSlide(1);
      }
    });
  </script>
